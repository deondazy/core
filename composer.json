{
    "name": "deondazy/core",
    "description": "The Deondazy Core PHP MVC Framework",
    "type": "project",
    "keywords": ["framework", "deondazy", "core", "mvc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Deon Okonkwo",
            "email": "deondazy@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "filp/whoops": "^2.14",
        "symfony/yaml": "^6.1",
        "twig/twig": "^3.4",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Deondazy\\Core\\": "src/",
            "Deondazy\\App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Deondazy\\Tests\\": "tests/"
        }
    },

    "scripts": {
        "test-php": "vendor/bin/phpunit --colors=always --verbose --coverage-text --coverage-clover coverage.xml"
    },
}
