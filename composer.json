{
    "name": "deondazy/core",
    "description": "The Deondazy Core PHP MVC Framework",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Deondazy\\Core\\": "core/",
            "Deondazy\\App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Deondazy\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Deon Okonkwo",
            "email": "deondazy@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "filp/whoops": "^2.14",
        "symfony/yaml": "^5.4",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test-php": "vendor/bin/phpunit --colors=always --verbose --coverage-text --coverage-clover coverage.xml"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    }
}
