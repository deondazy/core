{
    "name": "deondazy/core",
    "description": "The Deondazy Core PHP MVC Framework",
    "type": "project",
    "keywords": ["framework", "deondazy", "core", "mvc"],
    "license": "MIT",
    "authors": [
        {
            "name": "Deon Okonkwo",
            "email": "deondazy@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "doctrine/dbal": "^3.6",
        "doctrine/migrations": "^3.6",
        "doctrine/orm": "^2.15",
        "doctrine/sql-formatter": "^1.1",
        "filp/whoops": "^2.14",
        "odan/session": "^6.1",
        "php-di/slim-bridge": "^3.3",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.3",
        "symfony/cache": "^6.3",
        "symfony/security-core": "^6.3",
        "symfony/yaml": "^6.1",
        "vlucas/phpdotenv": "^5.5",
        "vlucas/valitron": "^1.4",
        "zeuxisoo/slim-whoops": "^0.7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "sebastian/phpcpd": "^6.0",
        "symfony/var-dumper": "^6.3",
        "vimeo/psalm": "^5.12"
    },
    "autoload": {
        "psr-4": {
            "Deondazy\\Core\\": "src/",
            "Deondazy\\App\\": "app/"
        },
        "files": [
            "app/Functions/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Deondazy\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-php": "vendor/bin/phpunit --colors=always --verbose --coverage-text --coverage-clover coverage.xml"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
